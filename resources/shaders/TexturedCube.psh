Texture2D    g_Texture;
SamplerState g_Texture_sampler; // Must follow this syntax for HSLS cross API compatibility <Texture Name>_sampler

struct PSInput
{
	float4 Pos : SV_POSITION;
	float2 UV  : TEX_COORD;
};

struct PSOutput
{
	float4 Color : SV_TARGET;
};

void main(in  PSInput  PSIn,
		  out PSOutput PSOut)
{
	PSOut.Color = g_Texture.Sample(g_TextureSampler, PSIn.UV);
}