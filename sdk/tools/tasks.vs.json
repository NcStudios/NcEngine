{
  "version": "0.2.1",
  "tasks": [
    {
      "taskLabel": "Task: Sdk-Dev-Debug",
      "appliesTo": "sdk/",
      "type": "launch",
      "commands": [
        {
          "command": "cmake",
          "args": [ "-S ./ -B build/dev -DCMAKE_INSTALL_PREFIX=install" ]
        },
        {
          "command": "cmake",
          "args": [ "--build build/dev --target install --config Debug --parallel 12" ]
        }
      ]
    },
    {
      "taskLabel": "Task: Sdk-Dev-Release",
      "appliesTo": "sdk/",
      "type": "launch",
      "commands": [
        {
          "command": "cmake",
          "args": [ "-S ./ -B build/dev -DCMAKE_INSTALL_PREFIX=install" ]
        },
        {
          "command": "cmake",
          "args": [ "--build build/dev --target install --config Release --parallel 12" ]
        }
      ]
    },
    {
      "taskLabel": "Task: Tests",
      "appliesTo": "sdk/",
      "type": "launch",
      "commands": [
        {
          "command": "cmake",
          "args": [ "-S test -B build/test" ]
        },
        {
          "command": "cmake",
          "args": [ "--build build/test --config Release --parallel 12" ]
        },
        {
          "command": "ctest",
          "args": [ "-V --test-dir build/test" ]
        }
      ]
    }
  ]
}