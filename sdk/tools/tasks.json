{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure-NcSdk-Dev",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", "./", "-B", "build/dev", "-DCMAKE_INSTALL_PREFIX=install"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build-NcSdk-Dev-Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build/dev", "--target", "install", "--config", "Debug", "--parallel", "12"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Configure-NcSdk-Dev"
        },
        {
            "label": "Build-NcSdk-Dev-Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build/dev", "--target", "install", "--config", "Release", "--parallel", "12"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Configure-NcSdk-Dev"
        },
        {
            "label": "Configure-Tests",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", "test", "-B", "build/test"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build-Tests",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build/test", "--config", "Release", "--parallel", "12"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Configure-Tests"
        },
        {
            "label": "Run-Tests",
            "type": "shell",
            "command": "ctest",
            "args": ["-V", "--test-dir", "build/test"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Build-Tests"
        }
    ]
}