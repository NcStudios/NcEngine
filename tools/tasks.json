// VS Code tasks for invoking NcEngine's build.bat build script. These
// can be added to your .vscode/tasks.json file for common build types.
//
//  - NcInstallDir must be added to your settings.json. Set it to any
//    path. Alternatively, ${config:NcInstallDir} may be changed here.
//
//  - "Ninja" may be changed to another generator.
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Editor Debug",
            "type": "shell",
            "command": "tools/build.bat",
            "args": ["Editor", "Debug", "${config:NcInstallDir}", "Ninja"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Engine Debug"
        },
        {
            "label": "Editor Release-WithEditor",
            "type": "shell",
            "command": "tools/build.bat",
