        {
            "name": "Tests-MSVC",
            "configurePreset": "Tests-MSVC"
        }
    ],
    "testPresets": [
        {
            "name": "Tests-Ninja",
            "configurePreset": "Tests-Ninja"
        },
        {
            "name": "Tests-MSVC",
            "configurePreset": "Tests-MSVC"
